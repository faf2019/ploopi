<?xml version="1.0" encoding="ISO-8859-1"?>
<ploopi>
    <moduletype>
        <label>webedit</label>
        <version>2.6.10</version>
        <author>Ovensia / HeXad</author>
        <date>20190130000000</date>
        <description>Editeur de Contenus Web</description>
        <paramtype>
            <name>display_type</name>
            <label>Type d'affichage par défaut</label>
            <default_value>beginner</default_value>
            <public>1</public>
            <description/>
            <paramchoice>
                <value>beginner</value>
                <displayed_value>Simplifié</displayed_value>
            </paramchoice>
            <paramchoice>
                <value>advanced</value>
                <displayed_value>Avancé</displayed_value>
            </paramchoice>
        </paramtype>
        <paramtype>
            <name>iframe_type</name>
            <label>Type d'iframe (backoffice)</label>
            <default_value>classic</default_value>
            <public>0</public>
            <description/>
            <paramchoice>
                <value>plain</value>
                <displayed_value>Pleine hauteur</displayed_value>
            </paramchoice>
            <paramchoice>
                <value>classic</value>
                <displayed_value>Hauteur fixe</displayed_value>
            </paramchoice>
        </paramtype>
        <paramtype>
            <name>iframe_height</name>
            <label>Hauteur fixe iframe en px</label>
            <default_value>500</default_value>
            <public>1</public>
            <description/>
        </paramtype>
        <paramtype>
            <name>nb_art_blog</name>
            <label>Nombre d'article par page de blog</label>
            <default_value>10</default_value>
            <public>1</public>
            <description/>
        </paramtype>
        <paramtype>
            <name>nb_comm_blog</name>
            <label>Nombre de commentaire par article en affichage "blog"</label>
            <default_value>10</default_value>
            <public>1</public>
            <description/>
        </paramtype>
        <paramtype>
            <name>comment_ctrl</name>
            <label>Contrôler les commentaires a priori</label>
            <default_value>1</default_value>
            <public>1</public>
            <description/>
            <paramchoice>
                <value>1</value>
                <displayed_value>oui</displayed_value>
            </paramchoice>
            <paramchoice>
                <value>0</value>
                <displayed_value>non</displayed_value>
            </paramchoice>
        </paramtype>
        <paramtype>
            <name>content_disposition</name>
            <label>Type de téléchargement des documents liés (content-disposition)</label>
            <default_value>attachment</default_value>
            <public>1</public>
            <description/>
            <paramchoice>
                <value>attachment</value>
                <displayed_value>Attachment</displayed_value>
            </paramchoice>
            <paramchoice>
                <value>inline</value>
                <displayed_value>Inline</displayed_value>
            </paramchoice>
        </paramtype>
        <action>
            <id_action>1</id_action>
            <label>Gérer les articles (Global)</label>
        </action>
        <action>
            <id_action>2</id_action>
            <label>Être sélectionnable dans la liste des Validateurs (Global)</label>
        </action>
        <action>
            <id_action>3</id_action>
            <label>Gérer les rubriques (Global)</label>
        </action>
        <action>
            <id_action>4</id_action>
            <label>Gérer les validateurs (À la rubrique) - (Nécessite d'être Gestionnaire de rubrique)</label>
        </action>
        <action>
            <id_action>5</id_action>
            <label>Gérer les abonnés (À la rubrique)</label>
        </action>
        <action>
            <id_action>6</id_action>
            <label>Gérer les autorisations d'accès (À la rubrique) - (Nécessite d'être Gestionnaire de rubrique)</label>
        </action>
        <action>
            <id_action>8</id_action>
            <label>Afficher les Statistiques</label>
        </action>
        <action>
            <id_action>9</id_action>
            <label>Réindéxer le contenu (Global)</label>
        </action>
        <action>
            <id_action>10</id_action>
            <label>Gérer les commentaires (À la rubrique)</label>
        </action>
        <action>
            <id_action>11</id_action>
            <label>Gérer les rédacteurs (À la rubrique) - (Nécessite d'être Gestionnaire de rubrique)</label>
        </action>
        <action>
            <id_action>12</id_action>
            <label>Être sélectionnable dans la liste des Rédacteurs (Global)</label>
        </action>
        <action>
            <id_action>21</id_action>
            <label>Gérer les gestionnaires (À la rubrique) - (Nécessite d'être Gestionnaire de rubrique)</label>
        </action>
        <action>
            <id_action>22</id_action>
            <label>Être sélectionnable dans la liste des Gestionnaires (Global)</label>
        </action>
